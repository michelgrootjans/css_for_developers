<% content_for :title, @page.name %>

<div id="menu">
  <%= render 'menu' %>
</div>

<div id="submenu">
  <%= render 'submenu', pages: @page.root.descendants.arrange %>
</div>

<div id="breadcrumbs">
  <%= render 'breadcrumbs' %>
</div>

<div id="notice">
  <%= render :partial => 'notice' %>
</div>

<h1><%= @page.name %></h1>

<%= simple_format @page.content %>

<%= link_to 'Edit', edit_page_path(@page) %> |
<%= link_to 'Back', pages_path %>
